{% extends'base.html.twig' %}

{% block body %}
    <div class="background">
    <h5 class="inscription_title">Inscription</h5>

    <div class="card" style="width: 25rem;" id="card_css">
        <div class="container-inscription-card-content">
            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
                    <div class="form-group">
                        <div class="label d-flex justify-content-center">{{ form_label(form.name) }}</div>
                        <div class="input">{{ form_widget(form.name) }}</div>
                        <div class="error">{{ form_errors(form.name) }}</div>
                    </div>
                    <div class="form-group">
                        <div class="label d-flex justify-content-center">{{ form_label(form.lastName) }}</div>
                        <div class="input">{{ form_widget(form.lastName) }}</div>
                        <div class="error">{{ form_errors(form.lastName) }}</div>
                    </div>
                    <div class="form-group">
                        <div class="label d-flex justify-content-center">{{ form_label(form.email) }}</div>
                        <div class="input" type="email">{{ form_widget(form.email) }}</div>
                        <div class="error">{{ form_errors(form.email) }}</div>
                    </div>
                    <div class="form-group">
                        <div class="input">{{ form_widget(form.password, {'attr': {'class': 'pasword_labels'}}) }}</div>
                        <div class="error">{{ form_errors(form.password, {'attr': {'class': 'pasword_labels'}}) }}</div>
                    </div>
                    <div class="form-group">
                        <div class="label d-flex justify-content-center">
                          <button type="submit" class="btn btn-dark" id="darkBtn">Cr√©er un compte</button>
                        </div>
                    </div>
            {{ form_end(form) }}
        </div>
        </div>
    </div>
    </div>
{% endblock %}
