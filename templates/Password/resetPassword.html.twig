{% extends'base.html.twig' %}

{% block body %}
<h5 class="inscription_title">Mot de passe oubli√©</h5>

<div class="card" style="width: 25rem;" id="card_css">
    <div class="container-inscription-card-content">
        {{ form_start(form) }}
                <div class="form-group" style="margin-top: 5%">
                    <div class="label d-flex justify-content-center">{{ form_label(form.email) }}</div>
                    <div class="input">{{ form_widget(form.email) }}</div>
                    <div class="error">{{ form_errors(form.email) }}</div>
                </div>

                <div class="form-group">
                    <div class="label d-flex justify-content-center">
                        <button type="submit" class="btn btn-dark"
                                style="margin-top: 10px;margin-bottom: 10px;">Envoie</button>
                    </div>
                </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
